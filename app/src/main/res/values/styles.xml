<resources>

    <!-- Button theme. -->
    <style name="buttonTheme" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/button_background_color</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:textColor">@color/text_primary_color</item>
        <item name="buttonStyle">@style/buttonTheme</item>
        <item name="android:buttonStyle">@style/buttonTheme</item>
    </style>

</resources>
